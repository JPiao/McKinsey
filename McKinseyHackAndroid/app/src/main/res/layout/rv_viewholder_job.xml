<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/viewholder_texts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/medium_margin">

            <TextView
                android:id="@+id/viewholder_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/viewholder_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_medium_text"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/viewholder_snippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_medium_text"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"

                />
        </LinearLayout>


        <!--<TextView-->
            <!--android:id="@+id/viewholder_city"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="@dimen/small_medium_text"-->
            <!--android:textColor="@color/black"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:gravity="center_vertical"-->
            <!--android:layout_marginRight="@dimen/medium_margin"-->
            <!--/>-->

    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_below="@id/viewholder_texts" />


</RelativeLayout>
